@model Instructor
@{
    ViewData["Title"] = "GetDetails";
}

<h1 class="mb-4 text-center">Instructor Details</h1>

<!-- Instructor Details Card -->
<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="row g-0">
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            <img src="@(string.IsNullOrEmpty(Model.image) || !Model.image.Contains("images") ? Url.Content("~/images/default-avatar.png") : Model.image)"
                 alt="Image of @Model.name"
                 class="img-fluid rounded-circle m-3 shadow-sm"
                 style="max-width: 150px; height: auto;" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title text-center">@Model.name</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Id:</strong> @Model.id
                    </li>
                    <li class="list-group-item">
                        <strong>Address:</strong> @Model.address
                    </li>
                    <li class="list-group-item">
                        <strong>Salary:</strong> @Model.salary
                    </li>
                    <li class="list-group-item">
                        <strong>Department:</strong> @Model.department?.name
                    </li>
                    <li class="list-group-item">
                        <strong>Course:</strong> @Model.course?.name
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Back to List Button -->
<div class="mt-4 d-flex justify-content-center">
    <a href="/Instructor/Index" class="btn btn-secondary">Back to List</a>
</div>
