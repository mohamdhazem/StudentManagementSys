@model UserViewModel

@{
    ViewData["Title"] = "Register";
}

<!-- Page Title -->
<h1 class="text-center my-4">Create Your Account</h1>

<!-- Centered Form Card -->
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-body p-5">
                <form asp-action="SaveRegister">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- Username Field -->
                    <div class="form-group mb-4">
                        <label asp-for="UserName" class="control-label visually-hidden"></label>
                        <input asp-for="UserName" class="form-control form-control-lg" placeholder="Username" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-4">
                        <label asp-for="PassWord" class="control-label visually-hidden"></label>
                        <input asp-for="PassWord" type="password" class="form-control form-control-lg" placeholder="Password" />
                        <span asp-validation-for="PassWord" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword" class="control-label visually-hidden"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Address Field -->
                    <div class="form-group mb-4">
                        <label asp-for="Address" class="control-label visually-hidden"></label>
                        <input asp-for="Address" class="form-control form-control-lg" placeholder="Your Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group d-grid">
                        <input type="submit" value="Create Account" class="btn btn-success btn-lg btn-block" />
                    </div>
                </form>
            </div>

            <!-- Optional Footer -->
            <div class="card-footer text-center py-3">
                <small>Already have an account? <a href="/Account/Login" class="text-primary">Log in here</a></small>
            </div>
        </div>
    </div>
</div>


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

