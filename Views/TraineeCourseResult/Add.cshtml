@model MvcDay2Task.ViewModel.TraineeCrsResultViewModel

@{
    ViewData["Title"] = "Add";
    SelectList Courses = new SelectList(ViewBag.coursesList, "id", "name");
}

<div class="container mt-5" style="width:800px">
    <div class="card shadow">
        <div class="card-header">
            <h4 class="mb-0">Add Course Result</h4>
        </div>
        <div class="card-body">
             <form asp-action="SaveAdd" asp-route-id="@ViewBag.id">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="CourseName" class="form-label"></label>
                    <select asp-for="CourseId" class="form-select">
                        <option value="">--Select Course--</option>
                        @foreach (var course in ViewBag.coursesList)
                        {
                            <option value="@course.id">@course.name</option>
                        }
                    </select>
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Degree" class="form-label"></label>
                    <input asp-for="Degree" class="form-control" placeholder="Enter Degree" />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Add" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    @* Optional back to list button *@
    @* <div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div> *@
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
